<div class="d-flex p-2 brand-text">
  <h3><%= @group.name.capitalize %>'s transactions</h3>
</div>

<div class="p-2 text-dark-50">
  <h4>Total spent: <%= @group.total_expenses %></h4>
</div>


<% @expenses.each do |ex| %>
  <div class="p-2">
    <div class="card p-2 bg-light">
      <div class="card-body">
        <h5 class="card-title"><%= ex.name %></h5>
        <p class="card-text">$<%= ex.amount %></p>
        <p class="card-text"><small class="text-muted"><%= ex.created_at %></small></p>
      </div>
    </div>
  </div>
<% end %>

<div class="w-100  py-1 px-1 cat-btn">
  <%= link_to "Add transaction", new_group_expense_path(@group, @expense), :class => "btn btn-outline-light" %>
</div>
