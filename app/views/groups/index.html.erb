<div class="px-2">
<% @groups.each do |group| %>
  <div class="card mb-3 bg-light" style="max-width: 540px;">
    <div class="row g-0">
      <div class="col-4 py-1">
          <img src="<%=(url_for(group.icon))%>" class="p-5 rounded img-thumbnail" alt="..." >
      </div>
      <div class="col-8">
        <div class="card-body">
          <%= link_to group_expenses_path(group.id) do %>
            <h5 class="card-title"><%= group.name %></h5>
          <% end %>
          <small>Total amount spent: $<%= group.total_expenses %></small>
          <p class="card-text"><small class="text-muted"><%= group.created_at %></small></p>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

<div class="w-100  py-1 px-1 cat-btn">
  <%= link_to "Add category", new_group_path, :class => "btn btn-outline-light" %>
</div>
